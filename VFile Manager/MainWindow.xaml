<Window x:Class="VFile_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VFile_Manager"
        mc:Ignorable="d"
        Title="VExplorer" Height="600" Width="800" Loaded="Window_Loaded">
    <!--Window.Resources>
        <DataTemplate x:Key="rowTemplate">
            <Grid Width="Auto" Height="30" Name="fileRow" PreviewMouseDown="fileRow_PreviewMouseDown" >
                <CheckBox x:Name="rowChecked" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="50,0,0,0"></CheckBox>
                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="100,0,0,0" ></TextBlock>
                <TextBlock Text="item"></TextBlock>
            </Grid>
        </DataTemplate>
    </-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel Orientation="Horizontal" Margin="20,0" HorizontalAlignment="Left">
                <Button Content="New File" x:Name="mkfileBut" Width="40" Height="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0"></Button>
                <Button Content="New Dir" x:Name="mkdirBut" Width="40" Height="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0"></Button>
                <Button Content="Copy" x:Name="copyBut" Width="40" Height="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0"></Button>
                <Button Content="Move" x:Name="movBut" Width="40" Height="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0"></Button>
                <Button Content="Rename" x:Name="renBut" Width="40" Height="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0"></Button>
                <Button Content="Delete" x:Name="delBut" Width="40" Height="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0"></Button>
            </StackPanel>
            <Button Content="Settings" x:Name="setBut" Width="40" Height="20" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,0" Click="setBut_Click"></Button>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <DockPanel>
                    <Button DockPanel.Dock="Left" Width="15" Height="15" HorizontalAlignment="Left" Margin="20,0,0,0" Background="White" BorderThickness="0" x:Name="toParentDirButL" Click="toParentDirButL_Click">T</Button>
                    <TextBlock DockPanel.Dock="Left" x:Name="pathRowL" HorizontalAlignment="Stretch" Width="300"></TextBlock>
                    <ComboBox DockPanel.Dock="Right" x:Name="rootComboBoxL" Width="50" SelectionChanged="rootComboBoxL_SelectionChanged"></ComboBox>
                </DockPanel>
            </Grid>
            <Grid Grid.Column="1">
                <DockPanel>
                    <Button DockPanel.Dock="Left" Width="15" Height="15" HorizontalAlignment="Left" Margin="20,0,0,0" Background="White" BorderThickness="0" x:Name="toParentDirButR" Click="toParentDirButR_Click">T</Button>
                    <TextBlock DockPanel.Dock="Left" x:Name="pathRowR" HorizontalAlignment="Stretch" Width="300"></TextBlock>
                    <ComboBox DockPanel.Dock="Right" x:Name="rootComboBoxR" Width="50" SelectionChanged="rootComboBoxR_SelectionChanged"></ComboBox>
                </DockPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
                    <ListBox Name="leftView" HorizontalContentAlignment="Stretch">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <ListBoxItem Width="Auto" Height="30" x:Name="leftViewItem" PreviewMouseDoubleClick="leftViewItem_PreviewMouseDoubleClick">
                                    <Grid>
                                        <TextBlock Text="D" Visibility="{Binding Info.IsDirectory}" Margin="10,0,0,0"></TextBlock>
                                        <TextBlock Text="{Binding Info.ShortName}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="30,0,0,0" ></TextBlock>
                                    </Grid>
                                </ListBoxItem>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Grid>
            <Grid Grid.Column="1">
                <ScrollViewer>
                    <ListBox Name="rightView" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <ListBoxItem Width="Auto" Height="30" x:Name="rightViewItem" PreviewMouseDoubleClick="rightViewItem_PreviewMouseDoubleClick">
                                    <Grid>
                                        <TextBlock Text="{Binding Info.ShortName}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="100,0,0,0" ></TextBlock>
                                    </Grid>
                                </ListBoxItem>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Window>
