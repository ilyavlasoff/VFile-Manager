<Window x:Class="VFile_Manager.AddNewHandlerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VFile_Manager"
        mc:Ignorable="d"
        Title="Add handler" Height="200" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="20, 20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Width="70">File type</TextBlock>
                <TextBox Width="280" Height="20" Name="typeBox"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Width="70">File handler</TextBlock>
                <TextBox Width="280" Height="20" Name="handlerBox"></TextBox>
            </StackPanel>
            <CheckBox Content="Override system handler" x:Name="overrideCheckbox" Margin="10,10"></CheckBox>
            <Button Width="40" Name="confirmButton" Click="confirmButton_Click" Background="Transparent">OK</Button>
        </StackPanel>
    </Grid>
</Window>
