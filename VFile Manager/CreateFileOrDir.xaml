<Window x:Class="VFile_Manager.CreateFileOrDir"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VFile_Manager"
        mc:Ignorable="d"
        Title="CreateFileOrDir" Height="200" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Name="titleForStr"></TextBlock>
            <TextBox Name="pathRow" Height="30" Width="350"></TextBox>
            <Button Width="50" Height="20" Name="acceptButton" Click="acceptButton_Click">Accept</Button>
        </StackPanel>
    </Grid>
</Window>
