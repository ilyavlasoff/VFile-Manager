<Window x:Class="VFile_Manager.CreateFileOrDir"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VFile_Manager"
        mc:Ignorable="d"
        Title="Create..." Height="200" Width="400" Icon="/Icons/add_file.png">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-40,0,0">
            <TextBlock Foreground="#4f83cc" Name="titleForStr"></TextBlock>
            <TextBox Name="pathRow" Height="30" Width="350" Margin="0,10" BorderBrush="#4f83cc" Foreground="#4f83cc"></TextBox>
        </StackPanel>
        <Button Height="20" Name="acceptButton" Click="acceptButton_Click" BorderBrush="#304ffe" VerticalAlignment="Bottom" Foreground="#4f83cc"
                Background="AliceBlue" HorizontalAlignment="Center" Margin="170,0,172,29">Accept</Button>
    </Grid>
</Window>
